@using BookLib.ViewModel

@model List<CategoryVM>

@section Title{Categories}
@section subTitle{Show}
@section Buttons{ 
	<a class="btn btn-primary" asp-controller="Categories" asp-action="Create">  
		Create
	</a>
}
	


		@if (!Model.Any())
		{
	
			    <div class="card-body">
				
			<div class="alert alert-info alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
				<h5><i class="icon fas fa-info"></i> Alert!</h5>
				No Data To show!
			</div>
			</div>
		}
		else
		{
			    <div class="card-body">
	<table class="table table-striped">
		<thead>
			<tr>
				<th style="width: 10px">#</th>
				<th>Name</th>
				<th>Action</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var @item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>
							<a asp-controller="Categories" asp-action="Edit" class=" btn btn-primary"
						asp-route-id="@item.Id" >
								<i class="far fa-edit"></i>
								Edit
					</a>
						</td>
						<td>
							<a asp-controller="Categories" asp-action="Details" class=" btn btn-info"
							   asp-route-id="@item.Id">
								<i class="fas fa-info"></i>
								Details
							</a>
						</td>
						<td>
							<a href="#" data-id="@item.Id"class=" btn btn-danger js-delete
" >
								<i class="fas fa-trash"></i>
								Delete
							</a>
						</td>
				</tr>
			}
		</tbody>
	</table>
	</div>
		}

@section Scripts {
	<script>
		document.querySelectorAll(".js-delete").forEach((btn) => {
			btn.addEventListener("click", async () => {
				Swal.fire({
					title: "Are you sure?",
					text: "You won't be able to revert this!",
					icon: "warning",
					showCancelButton: true,
					confirmButtonColor: "#3085d6",
					cancelButtonColor: "#d33",
					confirmButtonText: "Yes, delete it!"
				}).then(async (result) => {
					if (result.isConfirmed) {
						const id = btn.dataset.id;
						console.log(id);
						let response = await fetch(`Categories/Delete/${id}`, {
							method: 'POST'
						});
						if (response.ok) {
							btn.closest("tr").remove();
							Swal.fire({
							title: "Deleted!",
								text: "Category Deleted Successfully!",
									icon: "success"
							});
						}
					}
				});
			});
		});
	</script>
}

		

