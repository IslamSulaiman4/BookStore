@using BookLib.ViewModel
@model AuthorFormVM
@section Title {
Author
}
@section subTitle {
    @(Model?.Id == null ? "Create" : "Edit")
}


<form asp-controller="Authors">
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">
                Name
            </label>
            <input type="text" class="form-control" asp-for="Name" name="Name">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">
            @(Model?.Id == null ? "Add" : "Update")
        </button>

    </div>
</form>
